doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  meta(http-equiv='X-UA-Compatible', content='ie=edge')
  link(rel='stylesheet', href='/auth/login.css')
  script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js')
  script(src='https://kit.fontawesome.com/5a38a8d524.js', crossorigin='anonymous')
  link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css', integrity='sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T', crossorigin='anonymous')
  script(src='/auth/jquery-login.js')
  title Login
.login-container
  .img-box
    img.img-res(src="http://localhost:3000/images/layout/login.jpeg", alt="")
  .login-box
    if errors
      each error in errors
        .mb.alert.alert-danger= error
    form.form-login(action="/auth/login", method="POST")
      h1 BookStore
      .field.username
        label(for='email') E-mail
        input(type='text', name='email', value= values ? values.email : "")
      .field.password
        label(for='password') Password
        input(type='password', name='password')
      button.btnn Login
      a.create-acc(href='/auth/sign-up') Don&apos;t have an account? Sign up
